@page
@model Lab12.Pages.Results.IndexModel


<div class="col-md-2">
    

    <form>
        <div class="form-group">
            <label class="control-label"></label>
            @Html.DropDownListFor(m => m.id, Model.Categories,"Select", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-20">
                <input type="submit" value="Submit" />
            </div>


        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Article.Last().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article.Last().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article.Last().Category)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Article)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <dd class="col-sm-10">
                        <img src="@Url.Content(item.FilePath)" asp-append-version="true" width="50" />
                    </dd>
                </td>
                <td>
                    <a asp-page="/Articles/Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
